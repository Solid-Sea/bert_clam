{
  "experiment_name": "ablation_baseline",
  "bert_model": "bert-base-uncased",
  "output_dir": "./experiments/ablation_study/baseline",
  "use_wandb": true,
  "wandb_project": "bert-clam",
  "tasks": ["mnli", "qnli", "qqp"],
  "model_config": {
    "enable_ewc": false,
    "enable_amr": false,
    "enable_alp": false,
    "enable_grammar": false,
    "lora_enabled": false
  },
  "training_config": {
    "learning_rate": 2e-5,
    "batch_size": 16,
    "epochs_per_task": 1,
    "max_length": 128,
    "num_train_samples": 1000,
    "num_val_samples": 500
  }
}