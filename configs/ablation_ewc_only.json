{
  "experiment_name": "ablation_ewc_only",
  "bert_model": "bert-base-uncased",
  "output_dir": "./experiments/ablation_study/ewc_only",
  "tasks": [
    "mnli",
    "qnli",
    "qqp"
  ],
  "model_config": {
    "enable_ewc": true,
    "ewc_lambda": 1000.0,
    "enable_amr": false,
    "enable_alp": false,
    "enable_grammar": false
  },
  "training_config": {
    "learning_rate": 2e-05,
    "batch_size": 16,
    "epochs_per_task": 1,
    "max_length": 128,
    "num_train_samples": 1000,
    "num_val_samples": 500
  },
  "use_wandb": true,
  "wandb_project": "bert-clam"
}