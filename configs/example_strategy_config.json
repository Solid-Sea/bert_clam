{
  "experiment_name": "example_custom_strategies",
  "bert_model": "bert-base-uncased",
  "output_dir": "./experiments/example_strategies",
  "tasks": [
    "mnli",
    "qnli",
    "qqp"
  ],
  "strategies": [
    {
      "type": "grammar",
      "enabled": true,
      "params": {}
    },
    {
      "type": "alp",
      "enabled": true,
      "params": {}
    },
    {
      "type": "mrb",
      "enabled": true,
      "params": {
        "fusion_weight": 0.2
      }
    },
    {
      "type": "ewc",
      "enabled": true,
      "params": {}
    }
  ],
  "model_config": {
    "enable_ewc": true,
    "ewc_lambda": 0.15,
    "enable_amr": true,
    "amr_k": 10,
    "enable_alp": true,
    "alp_top_k": 3,
    "enable_grammar": true,
    "lora_enabled": false
  },
  "training_config": {
    "learning_rate": 2e-05,
    "batch_size": 16,
    "epochs_per_task": 1,
    "max_length": 128,
    "num_train_samples": 1000,
    "num_val_samples": 500
  },
  "use_wandb": false,
  "wandb_project": "bert-clam"
}